/**
 * @param {number[]} nums
 * @return {number}
 */
var minOperations = function(nums) {
    if (nums.length === 1) {
        return 0;
    }

    let count = 0;

    for (let i = 1; i <= nums.length-1; i++) {
        if (nums[i] <= nums[i-1]) {
            const diff = nums[i-1] - nums[i] + 1;
            count += diff;
            nums[i] = nums[i-1] + 1;
        }
    }

    return count;

};
