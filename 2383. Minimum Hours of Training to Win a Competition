/**
 * @param {number} initialEnergy
 * @param {number} initialExperience
 * @param {number[]} energy
 * @param {number[]} experience
 * @return {number}
 */
var minNumberOfHours = function (initialEnergy, initialExperience, energy, experience) {
    let totalEnergy = 0
    let count = 0;

    experience.forEach((el, i) => {
        if (el < initialExperience) {
            initialExperience += el
        } else {
            const diff = el - initialExperience + 1;
            initialExperience += diff + el;
            count += diff
        }

        totalEnergy += energy[i];
    })

    if (totalEnergy >= initialEnergy) {
        count += totalEnergy - initialEnergy + 1
    };

    return count
};
