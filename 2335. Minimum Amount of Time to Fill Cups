/**
 * @param {number[]} amount
 * @return {number}
 */
var fillCups = function (amount) {
    let count = 0;


    let sorted = amount.sort((a, b) => a - b);
    while (!(sorted[0] === 0 && sorted[1] === 0 && sorted[2] === 0)) {
        if (sorted[1] > 0 && sorted[2] > 0) {
            sorted[1] -= 1;
            sorted[2] -= 1;
            count += 1;
        } else if (sorted[2] > 0) {
            sorted[2] -= 1;
            count += 1;
        }

        amount = [sorted[0], sorted[1], sorted[2]];
        sorted = amount.sort((a, b) => a - b);
    }
    return count;


};
