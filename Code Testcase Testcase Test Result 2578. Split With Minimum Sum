/**
 * @param {number} num
 * @return {number}
 */
var splitNum = function(num) {
    const sorted = num.toString().split('').sort(( a,b ) => Number(a) - Number(b));

    let digit1 = '';
    let digit2 = '';
    sorted.forEach((el, i) => {
        if (i % 2 === 0) {
            digit1 = `${digit1}${el}` 
        } else {
            digit2 = `${digit2}${el}` 
        }
    })

    return Number(digit1) + Number(digit2);
};  
